<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
>
    <Dialog
        title="Full Remark"
        contentWidth="auto"
        contentHeight="auto"
        resizable="true"
        draggable="true"
        escapeHandler="onCloseRemarksDialog"
        afterClose="onCloseRemarksDialog"
    >
       <VBox class="sapUiSmallMargin">
            <Text text="{/remarks}" />
        </VBox>
        <beginButton>
            <Button text="Close" press="onCloseRemarksDialog" />
        </beginButton>
    </Dialog>
</core:FragmentDefinition>
