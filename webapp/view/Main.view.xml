<mvc:View
    xmlns:core="sap.ui.core"
    controllerName="ap.shipmentmanagement.controller.Main"
    xmlns="sap.m"
    xmlns:f="sap.f"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
>
    <Page
        id="page"
        title="{i18n>title}"
    >
        <content>
        <Button icon="sap-icon://crm-service-manager" type="Transparent" press="onNavToLog" text="Nav to shipment log" />
            <Table
                id="shipmentTable"
                items="{/ShipmentSet}"
            >
                <headerToolbar>
                    <OverflowToolbar>
                        <Title
                            text="Shipments"
                            level="H2"
                        />
                        <ToolbarSpacer />
                        <Button
                            tooltip="Sort"
                            icon="sap-icon://sort"
                            press="handleSortButtonPressed"
                        />
                        <Button
                            tooltip="Filter"
                            icon="sap-icon://filter"
                            press="handleFilterButtonPressed"
                        />
                    </OverflowToolbar>
                </headerToolbar>
                <columns>
                    <Column
                        id="tknumCol"
                        width="8em"
                    >
                        <VBox>
                            <Text text="ShipmentNr" />
                        </VBox>
                    </Column>
                    <Column
                        id="timeinCol"
                        minScreenWidth="Tablet"
                        demandPopin="true"
                        hAlign="End"
                        width="7em"
                    >
                        <Text text="Time In" />
                    </Column>
                    <Column
                        id="timeiniconCol"
                        minScreenWidth="Tablet"
                        demandPopin="true"
                        hAlign="Begin"
                        width="2em"
                    >
                        <Text text="" />
                    </Column>
                    <Column
                        id="timeoutCol"
                        minScreenWidth="Tablet"
                        demandPopin="true"
                        hAlign="End"
                        width="9em"
                    >
                        <Text text="Time Out" />
                    </Column>
                    <Column
                        id="complCol"
                        minScreenWidth="Tablet"
                        demandPopin="true"
                        hAlign="End"
                        width="9em"
                    >
                        <Text text="Completed At" />
                    </Column>
                    <Column
                        id="statusCol"
                        minScreenWidth="Tablet"
                        demandPopin="true"
                        hAlign="End"
                        width="8em"
                    >
                        <Text text="Status" />
                    </Column>
                    <Column
                        id="transporteurCol"
                        minScreenWidth="Tablet"
                        demandPopin="true"
                        hAlign="End"
                        width="9em"
                    >
                        <Text text="Transporteur" />
                    </Column>
                    <Column
                        id="apptimeCol"
                        minScreenWidth="Tablet"
                        demandPopin="true"
                        hAlign="End"
                        width="9em"
                    >
                        <Text text="App Time" />
                    </Column>
                    <Column
                        id="containerCol"
                        minScreenWidth="Tablet"
                        demandPopin="true"
                        hAlign="End"
                        width="9em"
                    >
                        <Text text="Container ID" />
                    </Column>
                    <Column
                        id="remarksCol"
                        minScreenWidth="Tablet"
                        demandPopin="true"
                        hAlign="End"
                    >
                        <Text text="Remarks" />
                    </Column>
                </columns>
                <items>
                    <ColumnListItem
                        type="Navigation"
                        vAlign="Middle"
                        press=".onListItemPress"
                    >
                        <cells>
                            <Button
                                text="{Tknum}"
                                press="onTknumClick"
                                ariaDescribedBy="defaultButtonDescription genericButtonDescription"
                                class="customButton"
                            >
                                <layoutData>
                                    <FlexItemData growFactor="1" />
                                </layoutData>
                            </Button>
                           <Text text="{ path: 'TimeIn', type: 'sap.ui.model.odata.type.Time', formatOptions: { style: 'medium', hour12: true } }" />

                            <core:Icon
                                src="sap-icon://{= ${Streg} !== 'X' ? (!${TimeIn} ? 'status-completed' : 'message-success') : 'message-error'}"
                                color="{= ${Streg} !== 'X' ? (!${TimeIn} ? 'green' : 'green') : 'red'}"
                            />
                            <Text text="{ path: 'TimeOut', type: 'sap.ui.model.odata.type.Time', formatOptions: { style: 'medium', hour12: false } }" />

                            <Text
                                text="{path: 'Uzabf', formatter: '.formatTime'}"
                            />
                            <core:Icon
                                src="sap-icon://{= ${Stabf} === 'X' ? 'status-completed' : (${Stlbg} === 'X' ? 'alert' : 'message-error')}"
                                color="{= ${Stabf} === 'X' ? 'green' : (${Stlbg} === 'X' ? 'yellow' : 'red')}"
                            />
                            <Text text="{Tdlnr}" />
                            <Text text="{ path: 'AppTime', type: 'sap.ui.model.odata.type.Time', formatOptions: { style: 'medium' } }" />
                            <Text text="{Signi}" />
                            <Link
                                    text="{
                                        path: 'Remarks',
                                        formatter: '.formatRemarks'
                                    }"
                                    tooltip="{Remarks}"
                                    press=".onRemarkClick"
                                    
                                />

                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </content>
    </Page>
</mvc:View>
